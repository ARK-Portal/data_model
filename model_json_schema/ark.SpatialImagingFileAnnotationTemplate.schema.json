{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/ark",
  "title": "ark",
  "type": "object",
  "properties": {
    "fileFormat": {
      "enum": [
        "czi",
        "xls",
        "csv",
        "mcd",
        "info",
        "fam",
        "mtx",
        "rds",
        "tgz",
        "zip",
        "h5",
        "txt",
        "parquet",
        "h5ad",
        "dose",
        "bed",
        "geojson",
        "bim",
        "rec",
        "svs",
        "vcf",
        "bam",
        "erate",
        "tbi",
        "fcs",
        "xlsx",
        "pdf",
        "docx",
        "bai",
        "fastq",
        "tsv"
      ]
    },
    "Component": {
      "not": {
        "type": "null"
      },
      "minLength": 1
    },
    "assay": {
      "enum": [
        "Xenium",
        "H&E",
        "GenePS SeqFISH",
        "CosMX",
        "imaging mass cytometry",
        "Visium",
        "serial IHC"
      ]
    },
    "resourceType": {
      "type": "array",
      "items": {
        "enum": [
          "metadata",
          "experimental data"
        ]
      },
      "maxItems": 2
    },
    "specimenModality": {
      "enum": [
        "single specimen",
        "multispecimen"
      ]
    },
    "RObjectClass": {
      "enum": [
        "matrix",
        "Symphony reference",
        "Seurat object",
        "data.frame",
        "vector",
        "ROCR prediction.object",
        "SummarizedExperiment",
        "list",
        "sparse matrix",
        ""
      ]
    },
    "metadataType": {
      "enum": [
        "other",
        "single-cell metadata",
        "tissue microarray map",
        "cell coordinates",
        "target panel",
        ""
      ]
    },
    "processedDataType": {
      "type": "array",
      "items": {
        "enum": [
          "epigenomic peaks",
          "differential expression results",
          "barcode counts",
          "gene counts",
          ""
        ]
      },
      "maxItems": 4
    },
    "biospecimenID": {},
    "slideID": {}
  },
  "required": [
    "fileFormat",
    "Component",
    "assay",
    "resourceType",
    "specimenModality"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "fileFormat": {
            "enum": [
              "rds"
            ]
          }
        },
        "required": [
          "fileFormat"
        ]
      },
      "then": {
        "properties": {
          "RObjectClass": {
            "enum": [
              "matrix",
              "Symphony reference",
              "Seurat object",
              "data.frame",
              "vector",
              "ROCR prediction.object",
              "SummarizedExperiment",
              "list",
              "sparse matrix",
              ""
            ]
          }
        },
        "required": [
          "RObjectClass"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "resourceType": {
            "enum": [
              "metadata"
            ]
          }
        },
        "required": [
          "resourceType"
        ]
      },
      "then": {
        "properties": {
          "metadataType": {
            "enum": [
              "other",
              "single-cell metadata",
              "tissue microarray map",
              "cell coordinates",
              "target panel"
            ]
          }
        },
        "required": [
          "metadataType"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "resourceType": {
            "enum": [
              "experimental data"
            ]
          }
        },
        "required": [
          "resourceType"
        ]
      },
      "then": {
        "properties": {
          "processedDataType": {
            "type": "array",
            "items": {
              "enum": [
                "epigenomic peaks",
                "differential expression results",
                "barcode counts",
                "gene counts",
                ""
              ]
            },
            "maxItems": 4
          }
        },
        "required": [
          "processedDataType"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "specimenModality": {
            "enum": [
              "single specimen"
            ]
          }
        },
        "required": [
          "specimenModality"
        ]
      },
      "then": {
        "properties": {
          "biospecimenID": {
            "not": {
              "type": "null"
            },
            "minLength": 1
          }
        },
        "required": [
          "biospecimenID"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "specimenModality": {
            "enum": [
              "multispecimen"
            ]
          }
        },
        "required": [
          "specimenModality"
        ]
      },
      "then": {
        "properties": {
          "slideID": {
            "not": {
              "type": "null"
            },
            "minLength": 1
          }
        },
        "required": [
          "slideID"
        ]
      }
    }
  ]
}