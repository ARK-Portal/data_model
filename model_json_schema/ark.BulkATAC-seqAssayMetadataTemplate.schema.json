          "Chromium Next GEM Chip Q",
          "Chromium Next GEM Chip M"
        ]
      },
      "maxItems": 43
    },
    "Component": {
      "not": {
        "type": "null"
      },
      "minLength": 1
    },
    "nucleicAcidSource": {
      "type": "array",
      "items": {
        "enum": [
          "intracellular protein feature barcode",
          "globin-depleted RNA",
          "antigen capture barcode",
          "surface protein feature barcode",
          "Tn5-accessible gDNA",
          "CRISPR protospacer feature barcode",
          "poly(A) RNA",
          "BCR mRNA",
          "multiplexing oligo",
          "gDNA",
          "rRNA-depleted RNA",
          "TCR mRNA"
        ]
      },
      "maxItems": 12
    },
    "totalReads": {
      "not": {
        "type": "null"
      },
      "minLength": 1
    },
    "softwareAndVersion": {
      "enum": [
        "Cell Ranger v7.1.0",
        "Cell Ranger v3.0.2",
        "Cell Ranger v5.0.0",
        "BD FACSDiva 8.0.1",
        "Cell Ranger v8.0.1",
        "Cell Ranger v8.0.0",
        "Cell Ranger v6.1.1",
        "Cell Ranger v5.0.1",
        "demuxlet",
        "Cell Ranger v7.0.1",
        "Cell Ranger v3.0.0",
        "Space Ranger 3.0.1",
        "Cell Ranger 9.0.1",
        "Cell Ranger v7.2.0",
        "Cell Ranger ATAC v1.1.0",
        "Cell Ranger v9.0.0",
        "Cell Ranger v6.1.0",
        "Cell Ranger v6.0.1",
        "Cell Ranger v3.1.0",
        "Space Ranger 3.1.0",
        "Space Ranger 3.0.0",
        "Cell Ranger v6.1.2",
        "Space Ranger 3.1.2",
        "Cell Ranger v6.0.2",
        "Cell Ranger v7.0.0",
        "Cell Ranger v6.0.0",
        "Space Ranger 3.1.3",
        "Space Ranger 3.1.1",
        "Cell Ranger v3.0.1",
        "Cell Ranger v4.0.0",
        ""
      ]
    },
    "alignmentReference": {
      "enum": [
        "vdj_GRCh38_alts_ensembl-4.0.0",
        "unknown",
        "10x Cell Ranger Human GRCh38 2020-A",
        "10x Cell Ranger Human GRCh38 2024-A"
      ]
    },
    "sampleProcessingBatch": {},
    "assay": {
      "type": "array",
      "items": {
        "enum": [
          "RNASeq",
          "H&E",
          "CITESeq",
          "Olink Flex",
          "scRNASeq",
          "feature barcode sequencing",
          "CosMX",
          "multiplexed ELISA",
          "CyTOF",
          "scVDJSeq",
          "Olink Focus",
          "Xenium",
          "Olink Reveal",
          "Olink Target 48",
          "SNP array",
          "VDJSeq",
          "Olink Explore HT",
          "NULISA",
          "imaging mass cytometry",
