{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/ark",
  "title": "ark",
  "type": "object",
  "properties": {
    "specimenModality": {
      "enum": [
        "single specimen",
        "multispecimen"
      ]
    },
    "platform": {
      "type": "array",
      "items": {
        "enum": [
          "Not Applicable",
          "Helios Mass Cytometer",
          "Chromium Next GEM Chip G",
          "BD FACSAria Fusion cell sorter",
          "Cytek Aurora Evo",
          "BD FACSDiscover A8",
          "Olink Signature Q100",
          "Illumina HiSeq 2500",
          "GEM-X Flex Gene Expression Chip",
          "BD FACSymphony S6",
          "Illumina HiSeq X Ten",
          "BD FACSMelody",
          "Cytek Aurora",
          "BD LSRFortessa",
          "BD FACSAria III",
          "Chromium iX",
          "Illumina NovaSeq X",
          "Hyperion",
          "GEM-X OCM 5' Chip",
          "Chromium Xo",
          "Xenium",
          "Thermo Fisher Attune CytPix",
          "CyTOF XT",
          "BD FACSCanto II",
          "BD FACSCanto",
          "Chromium X",
          "Chromium Next GEM Chip K",
          "Illumina NovaSeq 6000",
          "Fluidigm BioMark",
          "Thermo Fisher Attune Xenith",
          "Visium CytAssist",
