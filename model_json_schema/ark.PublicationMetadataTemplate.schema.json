{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/ark",
  "title": "ark",
  "type": "object",
  "properties": {
    "year": {
      "not": {
        "type": "null"
      },
      "minLength": 1
    },
    "PMCID": {},
    "DOI": {
      "not": {
        "type": "null"
      },
      "minLength": 1
    },
    "PMID": {
      "not": {
        "type": "null"
      },
      "minLength": 1
    },
    "Component": {
      "not": {
        "type": "null"
      },
      "minLength": 1
    },
    "title": {
      "not": {
        "type": "null"
      },
      "minLength": 1
    },
    "journal": {
      "not": {
        "type": "null"
      },
      "minLength": 1
    },
    "publicationDate": {
      "not": {
        "type": "null"
      },
      "minLength": 1
    },
    "associatedDataset": {},
    "project": {
      "type": "array",
      "items": {
        "enum": [
          "RA",
          "ELLIPSS",
          "LOCKIT",
          "STAMP",
          "AIM for RA",
          "V-CoRT",
          "SLE"
        ]
      },
      "maxItems": 7
    },
    "program": {
      "enum": [
        "AMP AIM",
        "Community Contribution",
        "AMP RA/SLE"
      ]
    },
    "publicationType": {
      "enum": [
        "pre-print",
        "peer-reviewed",
        "correction"
      ]
    },
    "programPhase": {
      "type": "array",
      "items": {
        "enum": [
          "II",
          "I",
          ""
        ]
      },
      "maxItems": 2
    }
  },
  "required": [
    "year",
    "DOI",
    "PMID",
    "Component",
    "title",
    "journal",
    "publicationDate",
    "project",
    "program",
    "publicationType"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "program": {
            "enum": [
              "AMP RA/SLE"
            ]
          }
        },
        "required": [
          "program"
        ]
      },
      "then": {
        "properties": {
          "programPhase": {
            "type": "array",
            "items": {
              "enum": [
                "II",
                "I"
              ]
            },
            "maxItems": 2
          }
        },
        "required": [
          "programPhase"
        ]
      }
    }
  ]
}